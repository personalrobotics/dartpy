FROM ubuntu:xenial

RUN apt-get -y update
RUN apt-get install -y software-properties-common
RUN add-apt-repository ppa:dartsim/ppa -y
RUN add-apt-repository ppa:personalrobotics/ppa -y
RUN apt-get -y update
RUN apt-get install -y \
    sudo \
    build-essential \
    cmake \
    pkg-config \
    wget \
    git \
    libdart6-all-dev \
    chimera
